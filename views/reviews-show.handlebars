<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h3>{{review.title}}</h3>
    <h4>{{review.movieTitle}}</h4>
    <p>{{review.description}}</p>

    <p>
        <a href="/reviews/{{review._id}}/edit">Edit Review</a>
    </p>
    <p>
        <form method="POST" action="reviews/{{review._id}}?_method=DELETE">
            <button class="btn btn-primary" type="submit">Delete Review</button>
        </form>
    </p>

    <hr>

    {{> comment-form}}

    <div id="comments">
      {{#each comments}}
        {{> comment}}
      {{/each}}
    </div>
  </div>
</div>