<h1>Now Playing</h1>

<div class="row">
    {{#each movies}}
    <div class="col-sm-3">
      <h2>{{this.title}}</h2>
      <a href="/movies/{{this.id}}">
          <img class="img-responsive" src='https://image.tmdb.org/t/p/w92{{this.poster_path}}' alt="{{this.title}}"/>
          </a>
      <br>
      <br>
          <p>{{this.overview}}</p>
          <br>
    </div>
    {{/each}}
</div>
